<div class="page-header breadcrumb-wrap">
    <div class="container">
        <div class="breadcrumb">
            <a href="/" rel="nofollow">Home</a>
            <span></span> All categories
            <span></span>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">



<div class="container mt-5">
    <div class="tab-content wow fadeIn animated" id="myTabContent">
                    <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
                        <div class="row product-grid-3">
  
                           <% data.forEach(element => { %>
                                                     
                            <div class="col-lg-4 col-md-4 col-12 col-sm-6 mt-5">
                                <div class="product-cart-wrap">
                                    <div class="product-img-action-wrap">
                                        <div class="product-img product-img-zoom">
                                            <a href="/product/<%=element._id  %> ">
                                                <img class="default-img" src="/images/products/<%=element.image[0]%> " alt="">
                                                <img class="hover-img" src="/images/products/<%=element.image[0]%> " alt="">
                                            </a>
                                        </div>
                                      
                                    </div>
                                    <div class="product-content-wrap">
                                        <div class="product-category">
                                            <a href="/product/<%=element._id  %> "><%=element.category%></a>
                                        </div>
                                        <h2><a href="/product/<%=element._id  %> "><%=element.productTitle.substring(0,16).concat('...')%></a></h2>
                                        <div class="rating-result" title="90%">
                                            <span>
                                                <span>86%</span>
                                            </span>
                                        </div>
                                        
                                        <div class="product-price">
                                            <span>â‚¹<%=element.price%></span>
                                            <!-- <span class="old-price">$245.8</span> -->
                                        </div>
                                        <div class="product-action-1 show">

                                            <div style="display: none;">
                                                <form action="/addtocart/<%=element._id %>" method="post">
                                                    <input type="text" name="qty" value="1" style="width: 60px;" min="1">
                                                    <button type="submit" id="submitbtn"></button>
                                                </form>
                                            </div>

                                            <% if (element.stock==0) { %>
                                                <a aria-label="Out of stock" aria-disabled="true" class="action-btn hover-up" id="cartbtn"><i class="fi-rs-shopping-bag-add"></i></a>
                                               <% } else { %>
                                                <a aria-label="Add To Cart" href="/addtocartfromshop/<%=element._id %>" class="action-btn hover-up" ><i class="fi-rs-shopping-bag-add"></i></a>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                           
                    </div>
  </div>
  </div>
  </div>
        </div>
        <div class="col-3 d-none d-lg-block">
            <div class="widget-category mb-30" style="position: relative;">
                <h5 class="section-title style-1 mb-30 wow fadeIn animated">Category</h5>
                <ul class="categories">
                    <% cdata.forEach(element => { %>
                     
                    
                    <li><a href="/shop/<%=element.name%> "><%=element.name%></a></li>
                    
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>


<% if (added) { %>
    <div class="alert alert-success text-center" style="position:fixed;top:300px;left:650px;" role="alert" id="alert">
        New item added to cart!
      </div>
<% } %>






<% if (exist) { %>
    <div class="alert alert-info text-center" style="position:fixed;top:300px;left:650px;" role="alert" id="alert">
        item already in cart!
      </div>
<% } %>


<script>

    function hideDiv() {
    document.getElementById('alert').style.display = 'none';
    }
    
    setTimeout(hideDiv, 1300); // Hide the div after 3 seconds (3000 milliseconds)
    
    
        document.getElementById('cartbtn').onclick = 
        ()=> {
            document.getElementById('submitbtn').click()
        }
    </script>

