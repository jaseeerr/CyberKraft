<%- include('../partials/admin-header') %>




<section class="content-main">
    <form action="/admin/featured_submit" method="post" enctype="multipart/form-data">
            <div class="row">
                 
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Add Featured Item</h2>

                      
                     
                        <div>
                         
                         
                          
                        </div>
                    </div>
                    <a href="/admin/featured" class="btn rounded btn-primary mb-3">View Featured Items</a>
                    <br>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                           
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Title</label>
                                    <input type="text" placeholder="Title" class="form-control" name="title" required>
                                </div>
                               
                              
                               
                                
                              
                                <button type="submit" onclick="hideDiv()" class="btn btn-md rounded font-sm hover-up" >Add</button>
                            
                        </div>
                    </div> <!-- card end// -->
                   
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload"> 
                                <img src="/stylesheets/assets-backend/imgs/theme/upload.svg" alt="" id="myImg">
                                <input class="form-control" name="image" type="file" required>
                            </div>
                        </div>
                    </div> <!-- card end// -->
                   
                    <!-- card end// -->


                    
                </div>
               
          

                
            </div>
            </form>
            
        </section>

      
          <script>
            
            function hideDiv() {
  document.getElementById('alert').style.display = 'none';
}

setTimeout(hideDiv, 1200); // Hide the div after 3 seconds (3000 milliseconds)

          </script>
          

