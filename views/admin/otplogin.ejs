<div class="container py-5 text-center ">
      <div class="row d-flex justify-content-center">
        <div class="row">
        <div class="col d-flex justify-content-center">
            
        </div>
    </div>
                            <div class="col-4 ">
                                <div class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5">
                                    <div class="padding_eight_all bg-white text-center ">
                                        <div class="heading_s1">
                                            <% if (locals.err1) { %>
                                                <p class="text-danger">Unknown error occured</p>
                                            <% } %>
                                           
                                            <img src="/stylesheets/assets/imgs/theme/logo.svg" style="width:60px;" alt="">
                                            <h3 class="mb-30">Admin Login</h3>
                                        </div>
                                        <form action="/admin/otp_submit" method="post" >
                                            <div class="form-group">
                                                <input type="text"  name="admin" id="admin" placeholder="Email/Phone Number" value="admin" required>
                                            </div>
                                            <div class="form-group">
                                                <input  type="password" name="otp" placeholder="Enter OTP"  required id="otp">
                                            </div>
                                            <div class="login_footer form-group">
                                                <div class="chek-form">
                                                    <div class="custome-checkbox">
                                                        <input class="form-check-input" type="checkbox" name="checkbox" id="exampleCheckbox1">
                                                        <!-- <label class="form-check-label" for="exampleCheckbox1"><span>Remember me</span></label> -->
                                                    </div>
                                                </div>
                                                <a class="text-muted" href="/admin/login">Login with password?</a>
                                            </div>
                                           

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-fill-out btn-block hover-up" id="btn" >Submit OTP</button>
                                            </div>
                                            <div class="form-group">
                                                <a href="/admin/resendotp" class="btn btn-fill-out btn-block hover-up" id="resend" >Resend OTP</a>
                                            </div>
                                            <div id="timer"></div>

                                            <!-- <div class="form-group">
                                                <a href="/admin/login" class="btn btn-fill-out btn-block hover-up" >Login with password</a>
                                            </div> -->
                                             <!-- {{!-- <p>Don't have an account? <a href="/signup">Signup!</a></p> --}} -->
                                        </form>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-1"></div>
                        </div>

                        <script>
                            document.getElementById('btn').onclick = ()=>{
                                let opt = document.getElementById('otp').value
                                document.getElementById('otp').value = opt.trim()

                                let admin = document.getElementById('admin').value
                                document.getElementById('admin').value = admin.trim()
                            }




                        </script>
