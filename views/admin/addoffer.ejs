<%- include('../partials/admin-header') %>




<section class="content-main">
    <form action="/admin/addoffer/<%=data._id %>" method="post" >
            <div class="row">
                 
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Add Discount</h2>

                      
                     
                        <div>
                         
                           
                          
                        </div>
                    </div>
                    <a href="/admin/offers" class="btn rounded btn-primary mb-3">View offer products</a>
                    <br>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Product Details</h4>
                        </div>
                        <div class="card-body">
                           
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Title</label>
                                    <input type="text" value="<%=data.productTitle %>" class="form-control" name="title" readonly >
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Description</label>
                                    <input type="text" value="<%=data.description %>" class="form-control" name="line1" readonly  >
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Category</label>
                                    <input type="text" value="<%=data.category %>" class="form-control" name="line2" readonly>
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Price</label>
                                    <input type="text" value="<%=data.price %>" class="form-control" name="line3" readonly>
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Current Stock</label>
                                    <input type="text" value="<%=data.stock %>" class="form-control" name="currentstock" readonly >
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Offer Stock</label>
                                    <input type="text" placeholder="Stock" class="form-control" name="stock" value="5" >
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Offer price</label>
                                    <input type="text" placeholder="Offer price" class="form-control" name="offprice" >
                                </div>
                               
                              
                               
                                
                              
                                <button type="submit" onclick="hideDiv()" class="btn btn-md rounded font-sm hover-up" >Save</button>
                            
                        </div>
                    </div> <!-- card end// -->
                   
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Image</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload"> 
                                <img src="/images/products/<%=data.image[0]%>" alt="" id="myImg">
                                <!-- <input class="form-control" name="image" type="file" required> -->
                            </div>
                        </div>
                    </div> <!-- card end// -->
                   
                    <!-- card end// -->


                    
                </div>
               
          

                
            </div>
            </form>
            
        </section>

      
          <script>
            
            function hideDiv() {
  document.getElementById('alert').style.display = 'none';
}

setTimeout(hideDiv, 1200); // Hide the div after 3 seconds (3000 milliseconds)

          </script>
          

        <%- include('../partials/admin-scripts') %>



     