<%- include('../partials/admin-header') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />




<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">All Users</h2>
          
        </div>
        <!-- <div>
            <input type="text" placeholder="Search order ID" class="form-control bg-white">
        </div> -->
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <div class="row gx-3">
                <div class="col-lg-4 col-md-6 me-auto">
                    <input type="text" placeholder="Search..." class="form-control">
                </div>
                <div class="col-lg-2 col-6 col-md-3">
                    <select class="form-select">
                        <option>Status</option>
                        <option>Active</option>
                        <option>Disabled</option>
                        <option>Show all</option>
                    </select>
                </div>
                <div class="col-lg-2 col-6 col-md-3">
                    <select class="form-select">
                        <option>Show 20</option>
                        <option>Show 30</option>
                        <option>Show 40</option>
                    </select>
                </div>
            </div>
        </header> <!-- card-header end// -->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Status</th>
                       
                            <th scope="col" class="text-end"> Actions </th>
                        </tr>
                    </thead>
                    <tbody>
<% data.forEach(element => { %>
    
 

                        <tr>
                            <% let id=element._id %> 
                            <td><%=id %> </td>
                            
                            <td><b><%=element.uname %></b></td>
                            <td><%=element.email %></td>
                            <td><%=element.phone %></td>
                            <% if (element.block) { %>
                                <td><span class="badge rounded-pill bg-danger">Blocked</span></td>

                                <% } else { %>
                                    <td><span class="badge rounded-pill alert-success">Unblocked</span></td>
                            <% } %>
                           
                            <% if (element.block) { %>
                                <td class="text-end">
                                   
                                    <a href="/admin/unblockuser/<%=id %>" onclick="return confirm('Are you sure you want to unblock this user? Click ok to confirm');" class="btn btn-md rounded font-sm bg-success">Unblock</a>

                                </td>
                                <% } else { %>
                                    <td class="text-end">
                                       

                                        <a href="/admin/blockuser/<%=id %>" onclick="return confirm('Are you sure you want to block this user? Click ok to confirm');" class="btn btn-md rounded font-sm bg-danger">Block</a>
                                    </td>
                            <% } %>
                            
                        </tr>
                        <% }) %>
                    </tbody>
                </table>

                
          
            </div> <!-- table-responsive //end -->
        </div> <!-- card-body end// -->
    </div> <!-- card end// -->
   
</section>


  
  <!-- Link to open the modal -->
 


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>


